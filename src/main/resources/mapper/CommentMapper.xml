		select c.comment_id,
		       c.user_id,
		       c.content,
		       c.create_time,
		       c.p_id,
		       u.user_name
		from comment c
				     left join user u on c.user_id = u.user_id
		where c.article_id = #{articleId,jdbcType=VARCHAR}
	</select>
